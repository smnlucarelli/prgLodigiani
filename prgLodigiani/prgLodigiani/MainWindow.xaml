        <!--Grid Gestione categorie-->
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="2" Margin="70,50,0,0">
            <Grid x:Name="GridCategorie" Grid.Column="1" Margin="0,0,0,0" Visibility="Collapsed" Panel.ZIndex="0">
                <!--Grid della tabella iniziale delle categorie-->
                <Grid x:Name="gSelectCategoria" Visibility="Visible">

                    <Grid.DataContext>
                        <local:Squadre/>
                    </Grid.DataContext>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--TextBox indirizzo funzione-->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,10,20,10">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF606060" FontStyle="Italic"><Run Text="Gestione categorie"/></TextBlock>
                    </StackPanel>

                    <!--ListView categorie-->
                    <materialDesign:Card Grid.Row="1" Margin="20,0">
                        <ListView x:Name="lvCategoria"  Margin="20,20,350,20.4" SelectedItem="{Binding CategoriaSelezionata}" ItemsSource="{Binding ElencoCategorie}" FontSize="12" SelectionChanged="lvCategoria_SelectionChanged">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Categoria" DisplayMemberBinding="{Binding CATEGORIA1}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </materialDesign:Card>

                    <!--Button cambia categorie-->
                    <Button x:Name="bChangeCat" Grid.Row="1" Height="auto" Margin="0,10,30,10" HorizontalAlignment="Right" Width="307" Background="#FF0D2432" BorderBrush="#FF0D2432" Click="bChangeCat_Click" >
                        <StackPanel Orientation="Horizontal" Height="30" Width="150">
                            <materialDesign:PackIcon Kind="SwapHorizontal" Margin="-0,0,2,0" VerticalAlignment="Center"/>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Cambia categoria"/></TextBlock>
                        </StackPanel>
                    </Button>

                    <materialDesign:Card x:Name="GridAtleti" Visibility="Collapsed" Grid.Row="2" Margin="20,10,20,10">
                        <!--DataGrid squadra-->
                        <Grid>
                            <StackPanel Margin="20,10,0,10">
                                <DataGrid x:Name="dgSquadra"
                                          AutoGenerateColumns="False"
                                          ColumnWidth="*"
                                          CanUserSortColumns="False"
                                          CanUserAddRows="False"
                                          ItemsSource="{Binding ElencoGiocatori}"
                                          SelectedItem="{Binding GiocatoreSelezionato}"
                                          Margin="0,0,0,10"
                                          VerticalScrollBarVisibility="Visible"
                                          IsReadOnly="True" 
                                          ColumnHeaderHeight="48" 
                                          RowHeight="40" 
                                          CanUserDeleteRows="False" 
                                          HorizontalAlignment="Left" 
                                          Width="637" 
                                          SelectionChanged="dgSquadra_SelectionChanged">
                                    <DataGrid.Columns>
                                        <materialDesign:DataGridTextColumn Binding="{Binding NOME}" Header="Nome" Width="120" IsReadOnly="True"/>
                                        <materialDesign:DataGridTextColumn Binding="{Binding COGNOME}" Header="Cognome" Width="120" IsReadOnly="True"/>
                                        <materialDesign:DataGridTextColumn Binding="{Binding PESO}" Header="Peso (KG)" Width="100" IsReadOnly="True"/>
                                        <materialDesign:DataGridTextColumn Binding="{Binding ALTEZZA}" Header="Altezza (cm)" Width="100" IsReadOnly="True"/>
                                        <materialDesign:DataGridTextColumn Binding="{Binding RUOLO}" Header="Ruolo" Width="200" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Margin="684,0,360,0" >
                                <TextBox x:Name="txtNome" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Nome" IsEnabled="False" Margin="10,10,9.4,10" Height="65" Padding="0" Text="{Binding TextNome}" />
                                <TextBox x:Name="txtCognome" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Cognome" IsEnabled="False" Margin="10,10,9.4,10" Height="65" Padding="0" Text="{Binding TextCognome}" />
                                <TextBox x:Name="txtPeso" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Peso (KG)" IsEnabled="False" Margin="10,10,9.4,10" Height="65" Padding="0" Text="{Binding TextPeso}" />
                                <TextBox x:Name="txtAltezza" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Altezza (cm)" IsEnabled="False" Margin="10,10,9.4,10" Height="65" Padding="0" Text="{Binding TextAltezza}" />
                                <TextBox x:Name="txtRuolo" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Ruolo" IsEnabled="False" Margin="10,10,9.4,10" Height="65" Padding="0" Text="{Binding TextRuolo}" />
                            </StackPanel>

                            <StackPanel Margin="1020,0,-0.4,271.8" Orientation="Vertical">
                                <Button x:Name="bAddGiocatore" Height="65" Margin="0,10,10,0" HorizontalAlignment="Right" Width="315" BorderBrush="#FF0D2432" Background="#FF0D2432" Click="bAddGiocatore_Click">
                                    <StackPanel Orientation="Horizontal" Height="20" Width="150">
                                        <materialDesign:PackIcon Kind="Add" Margin="-0,0,2,0" VerticalAlignment="Center"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Aggiungi giocatore"/></TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="bModifica" Height="65" Margin="0,20,10,0" HorizontalAlignment="Right" Width="315" Click="bModifica_Click" Background="#FF0D2432" BorderBrush="#FF0D2432" >
                                    <StackPanel Orientation="Horizontal" Height="20" Width="150">
                                        <materialDesign:PackIcon Kind="Edit" Margin="-0,0,2,0" VerticalAlignment="Center"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Modifica giocatore"/></TextBlock>
                                    </StackPanel>
                                </Button>

                            </StackPanel>

                            <StackPanel Margin="0,362,-0.4,0" Orientation="Horizontal" HorizontalAlignment="Right" Width="335">
                                <Button x:Name="bSalva" Height="Auto" Margin="10,0,10.2,14" Width="147.5" Background="#FF62A065" BorderBrush="#FF62A065" Visibility="Collapsed" Command="{Binding CommandAggiorna}" Click="bSalva_Click" IsEnabled="True">
                                    <StackPanel Orientation="Horizontal" Height="20" Width="66">
                                        <materialDesign:PackIcon Kind="Check" Margin="-0,0,2,0" VerticalAlignment="Center"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Salva"/></TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="bAggiungi" Height="Auto" Margin="10,0,10.2,14" Width="147.5" BorderBrush="#FF0D2432" Visibility="Collapsed" Command="{Binding CommandAggiungi}" Click="bAggiungi_Click" Background="#FF0D2432" IsEnabled="True">
                                    <StackPanel Orientation="Horizontal" Height="20" Width="90">
                                        <materialDesign:PackIcon Kind="Check" Margin="0,2,2,2" VerticalAlignment="Center" Width="15"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Aggiungi"/></TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="bAnnulla" Height="Auto" Margin="10,0,10.2,14" Width="147.5" Background="#FFBD4747" BorderBrush="#FFBD4747" Visibility="Collapsed" Click="bAnnulla_Click" IsEnabled="True">
                                    <StackPanel Orientation="Horizontal" Height="20" Width="80">
                                        <materialDesign:PackIcon Kind="Clear" Margin="-0,0,2,0" VerticalAlignment="Center"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Annulla"/></TextBlock>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </Grid>
                    </materialDesign:Card>

                </Grid>
            </Grid>
        </ScrollViewer>

        <!--Grid Inserisci video-->
        <Grid x:Name="GridInserisciVideo" Grid.Column="1" Margin="0,50,0,20" Visibility="Visible" Panel.ZIndex="0">

            <Grid.DataContext>
                <Classi:MoveFile/>
            </Grid.DataContext>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,10,20,10">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF606060" FontStyle="Italic"><Run Text="Home/Inserisci nuovo video"/></TextBlock>
                </StackPanel>


                <materialDesign:Card Grid.Row="1" Margin="20,5,20,5">
                    <StackPanel  Orientation="Horizontal" Margin="4">
                        <RadioButton  x:Name="rbPartita"
                                      Style="{StaticResource MaterialDesignTabRadioButton}"
                                      Margin="4"
                                      IsChecked="False"
                                      Content="Partita" 
                                      BorderBrush="#FF2196F3" Click="rbPartita_Click"/>
                        <RadioButton  x:Name="rbAllenamento"
                                      Style="{StaticResource MaterialDesignTabRadioButton}"
                                      Margin="4"
                                      IsChecked="False"
                                      Content="Allenamento"
                                      BorderBrush="#FF2196F3" Click="rbAllenamento_Click"/>
                        <RadioButton  x:Name="rbClip"
                                      Style="{StaticResource MaterialDesignTabRadioButton}"
                                      Margin="4"
                                      IsChecked="False"
                                      Content="Clip"
                                      BorderBrush="#FF2196F3" Click="rbClip_Click"/>
                    </StackPanel>
                </materialDesign:Card>


                <!--Grid inserimento video Partita-->
                <Grid x:Name="gridPartita" Grid.Row="2" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="1" Margin="20.4,5,20.4,0" Height="600" VerticalAlignment="Top">

                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,30,0,150" Grid.RowSpan="2" HorizontalAlignment="Center">
                                <ComboBox x:Name="catP" materialDesign:HintAssist.Hint="Categoria" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65" ItemsSource="{Binding ElencoCategorie}" DisplayMemberPath="CATEGORIA1" SelectedItem="{Binding CategoriaSelezionata}" />
                                <DatePicker x:Name="dateP" materialDesign:HintAssist.Hint="Data Partita" Style="{StaticResource MaterialDesignFilledDatePicker}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65"/>
                                <TextBox x:Name="avvP" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Avversario" IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextFieldTextBoxEnabledComboBox}" Margin="10,0,0,0" HorizontalAlignment="Left" Width="315" Height="65" Padding="0" />
                                <TextBox x:Name="noteP" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Note" IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextFieldTextBoxEnabledComboBox}" Margin="10,10,10,10" Height="165" Padding="0" Width="315" />
                            </StackPanel>

                            <Image Source="/undraw_statistics_ctoq.png" Grid.Row="1" Margin="0,0.4,0,0" HorizontalAlignment="Right" Width="226" />

                        </Grid>


                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="0" Margin="20.4,5,20.2,0" Height="600" VerticalAlignment="Top">

                        <StackPanel  Margin="20">

                            <Grid Height="560" Margin="0,0,0,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0" Grid.Column="1" Source="/undraw_online_video_ivvq.png" Height="300" Width="Auto" Stretch="UniformToFill" Margin="0,0,0,0" />



                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8 0 8 0" VerticalAlignment="Center">
                                    <Button x:Name="bSelectFile" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,0,0" Background="#FF4FA4FD" BorderBrush="#FF4FA4FD" Width="60" Height="60" Click="bSelectFile_Click">
                                        <materialDesign:PackIcon Kind="Plus" Width="30"/>
                                    </Button>
                                    <Button x:Name="bClearFile" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,0,0" Background="#FFFF3026" BorderBrush="#FFFF3026" Width="60" Height="60" Click="bClearFile_Click">
                                        <materialDesign:PackIcon Kind="Clear" Width="30"/>
                                    </Button>

                                    <TextBox x:Name="directoryFileTextBox" materialDesign:HintAssist.HelperText="File video" Margin="54,20,54,0" IsReadOnly="True" Width="476" VerticalAlignment="Top" Height="40" Padding="0,5,0,0" />

                                </StackPanel>

                                <Grid Grid.Row="2">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left">

                                        <Button x:Name="bNewUploadFileP" Style="{StaticResource MaterialDesignRaisedButton}" Content="Carica nuovo video" Background="#FF0D2432" BorderBrush="#FF0D2432" Margin="2,0" Click="bNewUploadFileP_Click" VerticalAlignment="Top" Height="50" Width="162" HorizontalAlignment="Left" HorizontalContentAlignment="Center" />

                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Right">
                                        <TextBlock x:Name="txtUploadSuccessP" VerticalAlignment="Center" Margin="0,0,30,0" Foreground="#FF2F7508" FontSize="16" Visibility="{Binding TextUploadSuccess}" >Il video è stato caricato!</TextBlock>
                                        <TextBlock x:Name="txtUploadUnsuccessP" VerticalAlignment="Center" Margin="0,0,30,0" FontSize="16" Foreground="#FFBD1010" Visibility="{Binding TextUploadUnsuccess}" >Il video non è stato caricato!</TextBlock>

                                        <Button x:Name="bUploadFile" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="Carica" Margin="2,0" Click="bUploadFile_Click" VerticalAlignment="Top" Height="50" Width="118" HorizontalAlignment="Right" HorizontalContentAlignment="Center" />
                                    </StackPanel>


                                </Grid>


                            </Grid>

                        </StackPanel>
                    </materialDesign:Card>

                </Grid>

                <!--Grid inserimento video Allenamento-->
                <Grid x:Name="gridAllenamento" Grid.Row="2" Visibility="Collapsed">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="1" Margin="20,5,20,20">

                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,30,0,150" Grid.RowSpan="2" HorizontalAlignment="Center">
                                <ComboBox x:Name="catAll" materialDesign:HintAssist.Hint="Categoria" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65" ItemsSource="{Binding ElencoCategorie}" DisplayMemberPath="CATEGORIA1" SelectedItem="{Binding CategoriaSelezionata}" />
                                <DatePicker x:Name="dateAll" materialDesign:HintAssist.Hint="Data Partita" Style="{StaticResource MaterialDesignFilledDatePicker}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65"/>
                                <TextBox x:Name="noteAll" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Note" IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextFieldTextBoxEnabledComboBox}" Margin="10,10,10,10" Height="165" Padding="0" Width="315" />
                            </StackPanel>

                            <Image Source="/undraw_statistics_ctoq.png" Grid.Row="1" Margin="430,0,0,0" />

                        </Grid>


                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="0" Margin="20.4,5,20.2,0" Height="600" VerticalAlignment="Top">

                        <StackPanel  Margin="20">

                            <Grid Height="560" Margin="0,0,0,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0" Grid.Column="1" Source="/undraw_online_video_ivvq.png" Height="300" Width="Auto" Stretch="UniformToFill" Margin="0,0,0,0" />



                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8 0 8 0" VerticalAlignment="Center">
                                    <Button x:Name="bSelectFileAll" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,0,0" Background="#FF4FA4FD" BorderBrush="#FF4FA4FD" Width="60" Height="60" Click="bSelectFile_Click">
                                        <materialDesign:PackIcon Kind="Plus" Width="30"/>
                                    </Button>
                                    <Button x:Name="bClearFileAll" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,0,0" Background="#FFFF3026" BorderBrush="#FFFF3026" Width="60" Height="60" Click="bClearFile_Click">
                                        <materialDesign:PackIcon Kind="Clear" Width="30"/>
                                    </Button>

                                    <TextBox x:Name="directoryFileAllenamentoTextBox" materialDesign:HintAssist.HelperText="File video" Margin="54,20,54,0" IsReadOnly="True" Width="476" VerticalAlignment="Top" Height="40" Padding="0,5,0,0" />

                                </StackPanel>

                                <Grid Grid.Row="2">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left">

                                        <Button x:Name="bNewUploadFileAll" Style="{StaticResource MaterialDesignRaisedButton}" Content="Carica nuovo video" Background="#FF0D2432" BorderBrush="#FF0D2432" Margin="2,0" Click="bNewUploadFileAll_Click" VerticalAlignment="Top" Height="50" Width="162" HorizontalAlignment="Left" HorizontalContentAlignment="Center" />

                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Right">
                                        <TextBlock x:Name="txtUploadSuccessAll" VerticalAlignment="Center" Margin="0,0,30,0" Foreground="#FF2F7508" FontSize="16" Visibility="{Binding TextUploadSuccess}" >Il video è stato caricato!</TextBlock>
                                        <TextBlock x:Name="txtUploadUnsuccessAll" VerticalAlignment="Center" Margin="0,0,30,0" FontSize="16" Foreground="#FFBD1010" Visibility="{Binding TextUploadUnsuccess}" >Il video non è stato caricato!</TextBlock>

                                        <Button x:Name="bUploadFileAll" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="Carica" Margin="2,0" Click="bUploadFileAll_Click" VerticalAlignment="Top" Height="50" Width="118" HorizontalAlignment="Right" HorizontalContentAlignment="Center" />
                                    </StackPanel>


                                </Grid>


                            </Grid>

                        </StackPanel>
                    </materialDesign:Card>

                </Grid>

                <!--Grid inserimento video Clip-->
                <Grid x:Name="gridClip" Grid.Row="2" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="1" Margin="20,5,20,20">

                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,30,0,150" Grid.RowSpan="2" HorizontalAlignment="Center">
                                <ComboBox x:Name="catClip" materialDesign:HintAssist.Hint="Categoria" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65" ItemsSource="{Binding ElencoCategorie}" DisplayMemberPath="CATEGORIA1" SelectedItem="{Binding CategoriaSelezionata}" />
                                <DatePicker x:Name="dateClip" materialDesign:HintAssist.Hint="Data Partita" Style="{StaticResource MaterialDesignFilledDatePicker}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65"/>
                                <ComboBox x:Name="playerClip" materialDesign:HintAssist.Hint="Giocatore" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="10,0,0,10" HorizontalAlignment="Left" Width="315" Height="65" ItemsSource="{Binding ElencoAtleti}" DisplayMemberPath="NOMECOMPLETO" SelectedItem="{Binding GiocatoreSelezionato}"/>
                                <TextBlock x:Name="txtPlayerId" Visibility="Collapsed" Text="{Binding GiocatoreSelezionato.ID}"></TextBlock>
                                <TextBox x:Name="noteClip" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" MaxWidth="400" materialDesign:HintAssist.Hint="Note" IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextFieldTextBoxEnabledComboBox}" Margin="10,10,10,10" Height="165" Padding="0" Width="315" />
                            </StackPanel>

                            <Image Source="/undraw_statistics_ctoq.png" Grid.Row="1" Margin="430,0,0,0" />

                        </Grid>


                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="0" Margin="20.4,5,20.2,0" Height="600" VerticalAlignment="Top">

                        <StackPanel  Margin="20">

                            <Grid Height="560" Margin="0,0,0,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0" Grid.Column="1" Source="/undraw_online_video_ivvq.png" Height="300" Width="Auto" Stretch="UniformToFill" Margin="0,0,0,0" />



                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8 0 8 0" VerticalAlignment="Center">
                                    <Button x:Name="bSelectFileClip" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,0,0" Background="#FF4FA4FD" BorderBrush="#FF4FA4FD" Width="60" Height="60" Click="bSelectFileClip_Click">
                                        <materialDesign:PackIcon Kind="Plus" Width="30"/>
                                    </Button>
                                    <Button x:Name="bClearFileClip" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,0,0" Background="#FFFF3026" BorderBrush="#FFFF3026" Width="60" Height="60" Click="bClearFileClip_Click">
                                        <materialDesign:PackIcon Kind="Clear" Width="30"/>
                                    </Button>

                                    <TextBox x:Name="directoryFileClipTextBox" materialDesign:HintAssist.HelperText="File video" Margin="54,20,54,0" IsReadOnly="True" Width="476" VerticalAlignment="Top" Height="40" Padding="0,5,0,0" />

                                </StackPanel>

                                <Grid Grid.Row="2">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left">

                                        <Button x:Name="bNewUploadFileClip" Style="{StaticResource MaterialDesignRaisedButton}" Content="Carica nuovo video" Background="#FF0D2432" BorderBrush="#FF0D2432" Margin="2,0" Click="bNewUploadFileClip_Click" VerticalAlignment="Top" Height="50" Width="162" HorizontalAlignment="Left" HorizontalContentAlignment="Center" />

                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Right">
                                        <TextBlock x:Name="txtUploadSuccessClip" VerticalAlignment="Center" Margin="0,0,30,0" Foreground="#FF2F7508" FontSize="16" Visibility="{Binding TextUploadSuccess}" >Il video è stato caricato!</TextBlock>
                                        <TextBlock x:Name="txtUploadUnsuccessClip" VerticalAlignment="Center" Margin="0,0,30,0" FontSize="16" Foreground="#FFBD1010" Visibility="{Binding TextUploadUnsuccess}" >Il video non è stato caricato!</TextBlock>

                                        <Button x:Name="bUploadFileClip" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="Carica" Margin="2,0" Click="bUploadFileClip_Click" VerticalAlignment="Top" Height="50" Width="118" HorizontalAlignment="Right" HorizontalContentAlignment="Center" />
                                    </StackPanel>


                                </Grid>


                            </Grid>

                        </StackPanel>
                    </materialDesign:Card>

                </Grid>

            </Grid>

        </Grid>

        <!--Grid Ricerca video-->
        <ScrollViewer x:Name="GridRicercaVideo" Visibility="Collapsed" Grid.Column="0" Grid.ColumnSpan="2" Margin="70,50,0,0">

            <Grid  Grid.Column="1">

                <Grid.DataContext>
                    <Classi:FilterVideo/>
                </Grid.DataContext>

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="800"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,10,20,10">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF606060" FontStyle="Italic"><Run Text="Ricerca video"/></TextBlock>
                </StackPanel>

                <materialDesign:Card Grid.Row="1" Background="{DynamicResource MaterialDesignBackground}" Margin="20,0,20,0">
                    <StackPanel >
                        <Expander HorizontalAlignment="Stretch" Header="Filtri" Height="139" Margin="0,0,0.4,0" IsExpanded="True">
                            <StackPanel Orientation="Horizontal" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Margin="24,8,24,16">
                                <ComboBox x:Name="catFiltri" materialDesign:HintAssist.Hint="Categoria" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="0,0,0,0" HorizontalAlignment="Left" Width="315" Height="65" ItemsSource="{Binding FiltroCategorie}" DisplayMemberPath="CATEGORIA1" SelectedItem="{Binding CategoriaFiltrata}" />
                                <ComboBox x:Name="playerFiltri" materialDesign:HintAssist.Hint="Giocatore" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="10,0,0,0" HorizontalAlignment="Left" Width="315" Height="65" ItemsSource="{Binding FiltroGiocatori}" DisplayMemberPath="NOMECOMPLETO" SelectedItem="{Binding GiocatoreFiltrato}" />
                                <!--<ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="Default ToggleButton Style" IsChecked="{Binding IsToggleEnable}" />-->
                                <ComboBox x:Name="tipoVFiltri" materialDesign:HintAssist.Hint="Tipo" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFilledComboBox}" Margin="10,0,0,0" HorizontalAlignment="Left" Width="315" Height="65" SelectedItem="{Binding TipoVideoFiltrato}">
                                    <ComboBoxItem>Partita</ComboBoxItem>
                                    <ComboBoxItem>Allenamento</ComboBoxItem>
                                    <ComboBoxItem>Clip</ComboBoxItem>
                                </ComboBox>
                                <Button Margin="40,0,0,0" Height="60" Width="125" Command="{Binding CommandFiltro}">Applica</Button>
                                <Button x:Name="bPulisciFiltro" Margin="20,0,0,0" Height="60" Width="125" Command="{Binding CommandPulisciFiltro}" Click="bPulisciFiltro_Click">Pulisci filtri</Button>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </materialDesign:Card>

                <!--DataGrid ricerca video-->
                <materialDesign:Card Grid.Row="2" Margin="20,20,20,20">
                    <StackPanel>
                        <Button Margin="20,20,0,0" Width="150" HorizontalAlignment="Left" Command="{Binding CommandAggiorna}">Aggiorna tabella</Button>
                        <DataGrid x:Name="dgVideo"
                                  AutoGenerateColumns="False"
                                  ColumnWidth="*"
                                  CanUserSortColumns="True"
                                  CanUserAddRows="False"
                                  ItemsSource="{Binding ElencoVideo}"
                                  Margin="20,20,20,20"
                                  VerticalScrollBarVisibility="Auto"
                                  IsReadOnly="True" 
                                  ColumnHeaderHeight="48" 
                                  RowHeight="40" 
                                  CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <materialDesign:DataGridTextColumn Binding="{Binding VIDEO1}" Header="Video" Width="200" IsReadOnly="True"/>
                                <materialDesign:DataGridTextColumn Binding="{Binding CATEGORIA}" Header="Categoria" Width="180" IsReadOnly="True"/>
                                <materialDesign:DataGridTextColumn Binding="{Binding ANNO}" Header="Anno sportivo" Width="150" IsReadOnly="True"/>
                                <materialDesign:DataGridTextColumn Binding="{Binding TIPO}" Header="Tipo" Width="150" IsReadOnly="True"/>
                                <materialDesign:DataGridTextColumn Binding="{Binding ATLETA1.NOMECOMPLETO}" Header="Atleta" Width="150" IsReadOnly="True"/>
                                <materialDesign:DataGridTextColumn Binding="{Binding URL}" Header="Percorso" Width="700" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>

            </Grid>

        </ScrollViewer>

        <!--Grid per il footer-->
        <Grid Margin="0,0,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2" Height="20" VerticalAlignment="Bottom">

            <materialDesign:Card Background="#FFB4B4B4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock>Versione 1.0</TextBlock>
                    <TextBlock Margin="10,0,0,0">Server:</TextBlock>
                    <TextBlock Text="{Binding Database.Connection.DataSource, Mode=OneWay}">
                        <!--<TextBlock.DataContext>
                            <Database:DBldgEntities/>
                        </TextBlock.DataContext>-->
                    </TextBlock>
                    <TextBlock Margin="10,0,0,0">Database:</TextBlock>
                    <TextBlock Text="{Binding Database.Connection.Database, Mode=OneWay}">
                        <!--<TextBlock.DataContext>
                            <Database:DBldgEntities/>
                        </TextBlock.DataContext>-->
                    </TextBlock>
                </StackPanel>
            </materialDesign:Card>

        </Grid>

    </Grid>
</Window>
