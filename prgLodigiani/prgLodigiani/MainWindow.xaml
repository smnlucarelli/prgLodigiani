<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prgLodigiani"
        xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Classi="clr-namespace:prgLodigiani.Classi" x:Name="Main" x:Class="prgLodigiani.MainWindow"
        mc:Ignorable="d"
        
        Title="LDG"
        Height="835"
        Width="1465"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowState="Normal"
        WindowStyle="None">


    <!--Animazione apertura e chiusura menu sidebar-->
    <Window.Resources>
        <Storyboard x:Key="OpenSidebar">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridSidebar">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="280"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseSidebar">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridSidebar">
                <EasingDoubleKeyFrame KeyTime="0" Value="280"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenSidebar">
            <BeginStoryboard Storyboard="{StaticResource OpenSidebar}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseSidebar">
            <BeginStoryboard Storyboard="{StaticResource CloseSidebar}"/>
        </EventTrigger>
    </Window.Triggers>

    <!--Grid generale-->
    <Grid Background="#FFE0E0E0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Grid per la gestione del menu sidebar-->
        <Grid x:Name="GridSidebar" Grid.Column="0" Background="#FF0D2432" Margin="0,0,0,0" Width="70" Grid.ColumnSpan="2" HorizontalAlignment="Left" Panel.ZIndex="5">
            <StackPanel VerticalAlignment="Top" Margin="0,10,0,0" Panel.ZIndex="5">

                <!--Animazione button apertura menu-->
                <Grid Height="60" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Button x:Name="ButtonOpenSidebar" Visibility="Visible" Height="30" Width="60" Margin="0,1,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="ButtonOpenSidebar_Click">
                        <materialDesign:PackIcon Kind="Menu" Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="ButtonCloseSidebar" Visibility="Collapsed" Height="30" Width="60" Margin="0,1,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="ButtonCloseSidebar_Click">
                        <materialDesign:PackIcon Kind="ArrowBack" Width="25" Height="25"/>
                    </Button>
                </Grid>

                <!--Elementi del menu-->
                <ListView x:Name="ListViewMenu" Foreground="#FF5C99D6" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="ListViewMenu_SelectionChanged" FontFamily="/Gesprod;component/Fonts/#Roboto Light">
                    <ListViewItem x:Name="ItemHome" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Home" Height="25" Width="35" Margin="10" Foreground="White" />
                            <TextBlock Text="Home" VerticalAlignment="Center" Margin="20 10" Foreground="White" FontSize="18"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemCategorie" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SoccerField" Height="25" Width="35" Margin="10" Foreground="White"/>
                            <TextBlock Text="Gestione categorie" VerticalAlignment="Center" Margin="20 10" Foreground="White" FontSize="18"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemInserisciVideo" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="VideoCall" Height="25" Width="35" Margin="10" Foreground="White"/>
                            <TextBlock Text="Inserisci video" VerticalAlignment="Center" Margin="20 10" Foreground="White" FontSize="18"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemRicercaVideo" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Search" Height="25" Width="35" Margin="10" Foreground="White"/>
                            <TextBlock Text="Ricerca video" VerticalAlignment="Center" Margin="20 10" Foreground="White" FontSize="18"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem x:Name="ItemUtenti" Height="60" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="User" Height="25" Width="35" Margin="10" Foreground="Gray"/>
                            <TextBlock Text="Utenti (BETA)" VerticalAlignment="Center" Margin="20 10" Foreground="Gray" FontSize="18"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>

            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,10" Panel.ZIndex="5" Height="60" Grid.Row="4">
                <ListViewItem x:Name="ItemImpostazioni" Height="60" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Settings" Height="25" Width="35" Margin="10" Foreground="Gray"/>
                        <TextBlock Text="Impostazioni (BETA)" VerticalAlignment="Center" Margin="20 10" Foreground="Gray" FontSize="18"/>
                    </StackPanel>
                </ListViewItem>

            </StackPanel>

        </Grid>

        <!--Grid per la navigation bar-->
        <Grid x:Name="GridNavBar" Grid.ColumnSpan="2" Background="#FF0D2432" MouseDown="GridNavBar_MouseDown" VerticalAlignment="Top" Height="50" Panel.ZIndex="-1" Margin="10,0,-10,0">

            <!--<Grid.DataContext>
                <class:LoginVM></class:LoginVM>
            </Grid.DataContext>-->

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">

                <!--<TextBlock x:Name="txtbUser" VerticalAlignment="Center" Foreground="White" />-->
                <materialDesign:PopupBox HorizontalAlignment="Right" Margin="10,7" StaysOpen="False" Foreground="White" PlacementMode="BottomAndAlignRightEdges" IsEnabled="False">
                    <StackPanel Width="150">
                        <Button x:Name="BtnAccount" Content="Account"/>
                        <Button x:Name="BtnHelp" Content="Help"/>
                        <Separator/>
                        <Button x:Name="BtnLogout" Content="Logout" Click="BtnLogout_Click"/>
                    </StackPanel>
                </materialDesign:PopupBox>

                <!--<materialDesign:Chip
                    Content="Utente" Foreground="White" Background="#12CACACA" IconBackground="#FFE2E2E2">
                    <materialDesign:Chip.Icon>
                        <materialDesign:PackIcon Kind="Account" Background="{x:Null}" Width="20" Height="20" ></materialDesign:PackIcon>
                    </materialDesign:Chip.Icon>
                </materialDesign:Chip>-->

                <Button x:Name="BtnMin" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="40" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="BtnMin_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize" Height="20" Width="20"/>
                </Button>
                <Button x:Name="BtnMax" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="40" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="BtnMax_Click">
                    <materialDesign:PackIcon Kind="WindowMaximize" Height="20" Width="20"/>
                </Button>
                <Button x:Name="BtnClose" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="40" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="BtnClose_Click" AutomationProperties.HelpText="&quot;Chiudi&quot;">
                    <materialDesign:PackIcon Kind="Close" Height="20" Width="20"/>
                </Button>

            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="95,0">
                <Image Source="/logo_lodigiani.png" Width="40" Height="40" Margin="0,0,20   ,0"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"><Run Text="ASD LODIGIANI CALCIO 1972"/></TextBlock>
            </StackPanel>


        </Grid>

        <!--Grid Home-->
        <Grid x:Name="GridHome" Visibility="Collapsed" Grid.Column="1">

            <Grid.DataContext>
                <local:Squadre/>
            </Grid.DataContext>

            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!--Card relativa al logo e al nome della squadra-->
            <materialDesign:Card Margin="20,80,20,20" Grid.Row="0">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,0">
                        <Image Source="/logo_lodigiani.png" Width="200" Height="200" VerticalAlignment="Center" Margin="75,0,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,0">
                        <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="50" VerticalAlignment="Center" Margin="50,0,0,0"><Run Text="ASD LODIGIANI CALCIO 1972"/></TextBlock>
                    </StackPanel>


                </Grid>

            </materialDesign:Card>

            <!--KPI e menu rapido-->
            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Card KPI categorie gestite e atleti gestiti-->
                <materialDesign:Card Margin="20,20,19.8,0" Grid.Row="0" Grid.Column="0" Height="367" VerticalAlignment="Top">

                    <materialDesign:Card.DataContext>
                        <local:Squadre/>
                    </materialDesign:Card.DataContext>

                    <StackPanel Orientation="Vertical">

                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="50" Margin="0,30,0,0" Text="{Binding TextCategorie}"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="30" Margin="0"><Run Text="Categorie gestite"/></TextBlock>
                        <Separator Margin="0,2,0,2" Height="83"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="50" Margin="0,0,0,0" Text="{Binding TextAtleti}"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="30"><Run Text="Atleti inseriti"/></TextBlock>

                    </StackPanel>


                </materialDesign:Card>

                <!--Card KPI video inseriti-->
                <materialDesign:Card Margin="20.2,20,19.6,0" Grid.Row="0" Grid.Column="1" Height="367" VerticalAlignment="Top">

                    <StackPanel Orientation="Vertical">

                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="70" Margin="0,120,0,0" Text="{Binding TextCategorie}"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="30" Margin="0"><Run Text="Video inseriti"/></TextBlock>

                    </StackPanel>


                </materialDesign:Card>

            </Grid>

